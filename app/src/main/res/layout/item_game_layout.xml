<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_game"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite1"
    android:foreground="@drawable/card_foreground"
    android:clickable="true"
    android:paddingBottom="20dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="20dp"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/game_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorWhite1"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/game_pic"
            android:layout_width="130dp"
            android:layout_height="65dp"
            android:background="@color/colorTipsGrey"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/game_card"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_title"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/game_card"
        android:textColor="@color/colorTextSub"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/game_platforms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_time"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/game_card"
        android:textColor="@color/colorWhite5"
        android:textSize="12sp" />

</RelativeLayout>